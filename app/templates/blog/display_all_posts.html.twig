{% extends 'base.html.twig' %}
{% block body %}
    <h2>Posty</h2>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Tytu≈Ç</th>
            <th>Aktywny</th>
            <th>Akcje</th>
        </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.title }}</td>
