{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container" style="margin-top: 5%">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Jesteś zalogowany jako {{ app.user.username }}, <a href="{{ path('app_logout') }}">Wyloguj</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">Zaloguj się</h1>
            <div class="form-group">
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            </div>
            <div class="form-group">
                <label for="inputPassword">Hasło</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            <button class="btn btn-lg btn-primary" type="submit">
                Zaloguj się
            </button>
        </form>
        <br>
        <p>Nie masz konta?</p><a href="{{ path('register') }}" class="btn btn-info">Zarejestruj się</a>
        <p>Zapomniałeś hasła?</p><a href="{{ path('app_forgot_password_request') }}" class="btn btn-warning">Resetuj hasło</a>
    </div>
{% endblock %}
